/** Stylus Styles */

// Available variables https://github.com/vuetifyjs/vuetify/blob/master/src/stylus/settings/_variables.styl

@import './theme.styl'

@import '../../node_modules/vuetify/src/stylus/app'


//  variables
$primary = #F5BA13


// styles

.container
  padding 0

.application--light .navigation-drawer
  background-color: $primary

.application--light .toolbar
  background-color: $primary

.application > main
  flex-direction: column

a
  text-decoration: none

.backgroundText
  min-height 40px
  display flex
  align-items center
  padding 1rem
  background-color #E8E7E7
  box-shadow 0px 0px 5px 5px #E8E7E7
  span
    font-size: 2rem
    color #A7A7A7

.form
  background-color #F1B415 !important
  border-radius 6px
  padding 1.5rem 2rem
  box-shadow 0px 0px 10px 5px $primary

.myBtn
  background-color red !important
  color #fff !important
  text-shadow 1px 1px 1px #333

.capital
  font-weight bold
  font-size 1.5rem
  background-color #E8E7E7
  box-shadow 0px 0px 5px 5px #E8E7E7
  margin-bottom: 1rem
  min-height 50px
  display flex
  justify-content center
  align-items center
  color #A7A7A7

.border
  border 1px dashed #A7A7A7
  margin 1rem 0

.text
  color #A7A7A7
  font-size 1.2rem
  margin-bottom 2rem

.application--light .list
  background-color: $primary